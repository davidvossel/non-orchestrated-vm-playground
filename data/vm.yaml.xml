<?xml version="1.0" encoding="utf-8"?>
<VirtualMachine>
	<apiVersion>kubevirt.io/v1alpha1</apiVersion>
	<kind>VirtualMachine</kind>
	<metadata>
		<name>testvm</name>
	</metadata>
	<spec>
		<domain>
			<devices>
				<graphics>
					<type>spice</type>
				</graphics>
				<interfaces>
					<type>network</type>
					<model>
						<type>e1000</type>
					</model>
					<source>
						<network>default</network>
					</source>
				</interfaces>
				<video>
					<type>qxl</type>
				</video>
				<disks>
					<type>network</type>
					<snapshot>external</snapshot>
					<transient>True</transient>
					<device>disk</device>
					<driver>
						<name>qemu</name>
						<type>raw</type>
						<cache>none</cache>
					</driver>
					<source>
						<host>
							<name>iscsi-demo-target.default</name>
							<port>3260</port>
						</host>
						<protocol>iscsi</protocol>
						<name>iqn.2017-01.io.kubevirt:sn.42/2</name>
					</source>
					<target>
						<dev>vda</dev>
					</target>
				</disks>
				<consoles>
					<type>pty</type>
				</consoles>
			</devices>
			<memory>
				<unit>MB</unit>
				<value>64</value>
			</memory>
			<os>
				<type>
					<os>hvm</os>
				</type>
			</os>
			<type>qemu</type>
		</domain>
	</spec>
</VirtualMachine>
